<UserControl x:Class="DockDAP.dmeAPControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="Black"
             Foreground="White"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="400"
             Name="MyToolWindow">
    <Grid Background="Black">
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="10" Foreground="White" HorizontalAlignment="Center">Welcome to DockDAP by Aripa Pars Studio</TextBlock>
            <StackPanel>
                <DockPanel>
                    <Label  BorderBrush="White" BorderThickness="1" Content="Create dub.json File : " Foreground="White"></Label>
                    <Button BorderBrush="White" Background="Black" Content="Create" Foreground="White "></Button>
                </DockPanel>
                <TabControl>
                    <TabItem FontSize="10" Header="dub Manager">
                        <TabControl Background="DarkGray" >
                            <TabItem Header="Project">
                                <StackPanel Margin="10">
                                    <Label Content="Name" />
                                    <TextBox />
                                    <Label Content="Description" />
                                    <TextBox />
                                    <Label Content="Authors" />
                                    <TextBox />
                                    <Label Content="License" />
                                    <TextBox />
                                    <Label Content="Target Name" />
                                    <TextBox />
                                    <Label Content="Target Type" />
                                    <TextBox />
                                    <Label Content="Source Files" />
                                    <TextBox />
                                </StackPanel>
                            </TabItem>
                            <TabItem Header="Dependencies">
                                <StackPanel Margin="10">
                                    <Label Content="Dependencies"/>
                                    <TextBox />
                                    <Button Content="Add Dependency"/>
                                    <ListBox Height="150" />
                                    <Button Content="Remove Selected Dependency"/>
                                </StackPanel>
                            </TabItem>
                            <TabItem Header="Build Configurations">
                                <StackPanel Margin="10">
                                    <Label Content="Configurations"/>
                                    <ComboBox>
                                        <ComboBoxItem Content="debug" IsSelected="True"/>
                                        <ComboBoxItem Content="release"/>
                                    </ComboBox>
                                    <Label Content="dflags"/>
                                    <TextBox />
                                    <Label Content="lflags"/>
                                    <TextBox />
                                </StackPanel>
                            </TabItem>
                        </TabControl>
                    </TabItem>
                    <TabItem Header="show dub.json">
                        <StackPanel Background="Black">
                            <Label Background="Black" Foreground="White" Content="Open dub.json in Visual Studio : " ></Label>
                            <Button Content="Open file" Width="100" Height="30" Background="Black" Foreground="White"
                                    BorderBrush="White" BorderThickness="3" Margin="5"
                                    ></Button>
                            <TextBlock Background="Black" Margin="5" Foreground="White" TextWrapping="Wrap" Text="If you don't have a dub.json file, you can create a new one using the button above." />
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Build with Dub">
                        <StackPanel Background="Black">
                            <Label Background="Black" Foreground="White" Content="Build with Debug : " ></Label>
                            <Button Content="Build Debug" Width="100" Height="30" Background="Black" Foreground="White"
                                        BorderBrush="White" BorderThickness="3" Margin="5"
                                ></Button>
                            <Label Background="Black" Foreground="White" Content="Build with Release : " ></Label>
                            <Button Content="Build Release" Width="100" Height="30" Background="Black" Foreground="White"
                                        BorderBrush="White" BorderThickness="3" Margin="5"
                                ></Button>

                            <TextBlock Background="Black" Margin="5" Foreground="White" TextWrapping="Wrap" Text="If you don't have a dub.json file, you can create a new one using the button above." />
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="about me">
                        <StackPanel Background="Black" Margin="10">
                            <TextBlock Text="Hello, I am Khashayar Mobasheri (Abolfazl), founder of Aripa Pars Studio." 
                                       FontSize="14" FontWeight="Bold" Margin="0,0,0,10"
                                       TextWrapping="Wrap"
                                       Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="This extension is designed to improve the workflow for Dub and D language developers. It's a simple, yet powerful and useful extension. If you like it, I'd appreciate a star! ❤" 
                                       TextWrapping="Wrap" Margin="0,0,0,20"
                                       Foreground="White" HorizontalAlignment="Center"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Name="Btn_Telegram" Content="Telegram" Margin="5" Click="Btn_Telegram_Click"/>
                                <Button Name="Btn_Website" Content="Website" Margin="5" Click="Btn_Website_Click"/>
                                <Button Name="Btn_Github" Content="GitHub" Margin="5" Click="Btn_Github_Click"/>
                                <Button Name="Btn_DockDAPrepository" Content="Extension Repository" Margin="5" Click="Btn_DockDAPrepository_Click"/>
                            </StackPanel>
                        </StackPanel>

                    </TabItem>
                </TabControl>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
