<UserControl x:Class="DockDAP.dmeAPControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="Black"
             Foreground="White"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="400"
             Name="MyToolWindow">
    <Grid Background="Black">
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="10" Foreground="White" HorizontalAlignment="Center">Welcome to DockDAP by Aripa Pars Studio</TextBlock>
            <StackPanel>
                <DockPanel>
                    <Label  BorderBrush="White" BorderThickness="1" Content="Create dub.json File : " Foreground="White"/>
                    <Button BorderBrush="White" Background="Black" Content="Create" Foreground="White " Click="Button_Click"/>
                </DockPanel>
                <TabControl>
                    <TabItem FontSize="10" Header="dub Manager">
                        <TabControl Background="DarkGray" >
                            <TabItem Header="Project">
                                <StackPanel Margin="10">
                                    <Label Content="Name" />
                                    <TextBox Name="TXTnameDubFile" MouseEnter="TXTnameDubFile_OnMouseEnter"/>
                                    <Label Content="Description" />
                                    <TextBox Name="TXTdescriptionDubFile" MouseEnter="TXTdescriptionDubFile_OnMouseEnter" />
                                    <Label Content="License" />
                                    <TextBox Name="TXTlicenseDubFile"  MouseEnter="TXTlicenseDubFile_OnMouseEnter" />
                                    <Label Content="Target Name" />
                                    <TextBox Name="TXTtargetNameDubFile"  MouseEnter="TXTtargetNameDubFile_OnMouseEnter" />
                                    <Label Content="Target Type" />
                                    <TextBox Name="TXTtargetTypeDubFile"  MouseEnter="TXTtargetTypeDubFile_OnMouseEnter" />
                                </StackPanel>
                            </TabItem>
                            <TabItem Header="Authors">
                                <StackPanel>
                                    <Label Content="Authors" />
                                    <TextBox Name="TXTauthorsDubFile" MouseEnter="TXTauthorsDubFile_OnMouseEnter" />
                                    <Button Name="Btn_AddAuthors" Content="Add Authors" Margin="0,0,0,10"
                                            Click="Btn_AddAuthors_OnClick"
                                            />
                                    <ListBox x:Name="ListBoxAuthors" Height="150" ItemsSource="{Binding ListAuthors}"/>
                                    <Button Name="Btn_DeleteAuthors" Content="Remove Selected Authors"
                                            Click="Btn_DeleteAuthors_OnClick"
                                            />
                                </StackPanel>
                            </TabItem>
                            <TabItem Header="Source Files">
                                <StackPanel>
                                    <Label Content="Source Files" />
                                    <TextBox Name="TXTsourceFilesDubFile"  MouseEnter="TXTsourceFilesDubFile_OnMouseEnter" />
                                    <Button Name="BtnAddSourceFile" Content="Add SourceFile" Margin="0,0,0,10"
                                            Click="BtnAddSourceFile_OnClick"
                                            />
                                    <ListBox x:Name="ListBoxSourceFile" Height="150" ItemsSource="{Binding ListSourceFile}"/>
                                    <Button Name="BtnDeleteSourceFile" Content="Remove Selected SourceFile"
                                            Click="BtnDeleteSourceFile_OnClick"
                                            />
                                </StackPanel>
                            </TabItem>
                            <TabItem Header="Dependencies">
                                <StackPanel Margin="10">
                                    <Label Content="Dependencies"/>
                                    <TextBox Name="TXTdependenciesDubFile" />
                                    <Button Content="Add Dependency" Margin="0,0,0,10"/>
                                    <ListBox Name="ListBoxDependency" Height="150"  >
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding Key}" FontWeight="Bold"/>
                                                    <TextBlock Text=": "/>
                                                    <TextBlock Text="{Binding Value}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <Button Content="Remove Selected Dependency"/>
                                </StackPanel>
                            </TabItem>
                            <TabItem Header="Build Configurations">
                                <StackPanel Margin="10">
                                    <Label Content="Configurations"/>
                                    <ComboBox>
                                        <ComboBoxItem Content="debug" IsSelected="True"/>
                                        <ComboBoxItem Content="release"/>
                                    </ComboBox>
                                    <Label Content="dflags"/>
                                    <TextBox Name="TXTdflagsDubFile" MouseEnter="TXTdflagsDubFile_OnMouseEnter" />
                                    <Label Content="lflags"/>
                                    <TextBox Name="TXTlflagsDubFile" MouseEnter="TXTlflagsDubFile_OnMouseEnter" />
                                </StackPanel>
                            </TabItem>
                        </TabControl>
                    </TabItem>
                    <TabItem Header="show dub.json">
                        <StackPanel Background="Black">
                            <Label Background="Black" Foreground="White" Content="Open dub.json in Visual Studio : " />
                            <Button Name="BTNShowDubFileInVS"
                                Content="Open file" Width="100" Height="30" Background="Black" Foreground="White"
                                    BorderBrush="White" BorderThickness="3" Margin="5" Click="BTNShowDubFileInVS_Click"
                                    />
                            <TextBlock Background="Black" Margin="5" Foreground="White" TextWrapping="Wrap" Text="If you don't have a dub.json file, you can create a new one using the button above." />
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Build with Dub">
                        <StackPanel Background="Black">
                            <Label Background="Black" Foreground="White" Content="Build with Debug : " />
                            <Button Name="BtnBuildDebugDub"
                                Content="Build Debug" Width="100" Height="30" Background="Black" Foreground="White"
                                        BorderBrush="White" BorderThickness="3" Margin="5" Click="BtnBuildDub_Click"
                                />
                            <Label Background="Black" Foreground="White" Content="Build with Release : " />
                            <Button  Name="BtnBuildReleaseDub"
                                Content="Build Release" Width="100" Height="30" Background="Black" Foreground="White"
                                        BorderBrush="White" BorderThickness="3" Margin="5" Click="BtnBuildDub_Click"
                                />

                            <TextBlock Background="Black" Margin="5" Foreground="White" TextWrapping="Wrap" Text="If you don't have a dub.json file, you can create a new one using the button above." />
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="about me">
                        <StackPanel Background="Black" Margin="10">
                            <TextBlock Text="Hello, I am Khashayar Mobasheri (Abolfazl), founder of Aripa Pars Studio." 
                                       FontSize="14" FontWeight="Bold" Margin="0,0,0,10"
                                       TextWrapping="Wrap"
                                       Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="This extension is designed to improve the workflow for Dub and D language developers. It's a simple, yet powerful and useful extension. If you like it, I'd appreciate a star! ❤" 
                                       TextWrapping="Wrap" Margin="0,0,0,20"
                                       Foreground="White" HorizontalAlignment="Center"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Name="Btn_Telegram" Content="Telegram" Margin="5" Click="Btn_Telegram_Click"/>
                                <Button Name="Btn_Website" Content="Website" Margin="5" Click="Btn_Website_Click"/>
                                <Button Name="Btn_Github" Content="GitHub" Margin="5" Click="Btn_Github_Click"/>
                                <Button Name="Btn_DockDAPrepository" Content="Extension Repository" Margin="5" Click="Btn_DockDAPrepository_Click"/>
                            </StackPanel>
                        </StackPanel>

                    </TabItem>
                </TabControl>
                <Button Name="BtnSaveDubFile" Margin="20" Background="Black" Content="Save File"
                        Foreground="White" Click="BtnSaveDubFile_OnClick"
                        BorderThickness="3" BorderBrush="White"
                        ></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
